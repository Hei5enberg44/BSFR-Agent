{
    "name": "bsfr-agent",
    "displayName": "BSFR Agent",
    "version": "2.30.1",
    "description": "Admin agent bot for BSFR",
    "main": "dist/bot.js",
    "type": "module",
    "engines": {
        "npm": ">=11.4.0",
        "node": ">=22.17.0"
    },
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "start": "npm run start:bot",
        "start:bot": "npm run build && node --enable-source-maps dist/bot.js",
        "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Hei5enberg44/BSFR-Agent"
    },
    "author": "BSFR",
    "license": "ISC",
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "bracketSameLine": true,
        "arrowParens": "always"
    },
    "dependencies": {
        "@sequelize/core": "^7.0.0-alpha.46",
        "@sequelize/mariadb": "^7.0.0-alpha.46",
        "@discordjs/opus": "^0.10.0",
        "@discordjs/voice": "^0.19.0",
        "chalk": "^5.6.2",
        "cron": "^4.3.3",
        "discord.js": "^14.23.2",
        "fluent-ffmpeg": "^2.1.3",
        "googleapis": "^162.0.0",
        "nextcloud-node-client": "^1.8.1",
        "opusscript": "^0.1.1",
        "p-limit": "^7.1.1",
        "sodium-native": "^5.0.9",
        "tmp": "^0.2.5"
    },
    "devDependencies": {
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/tmp": "^0.2.6",
        "eslint": "^9.37.0",
        "typescript": "^5.9.3"
    }
}
